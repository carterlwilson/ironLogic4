{
  "name": "ironlogic4-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for IronLogic4 application with server, client, shared, and mobile packages",
  "workspaces": [
    "packages/server",
    "packages/client",
    "packages/shared",
    "packages/mobile"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev -w packages/server\" \"npm run dev -w packages/client\"",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}